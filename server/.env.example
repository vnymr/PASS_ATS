# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/resume_generator?schema=public

# Redis Cache
REDIS_URL=redis://localhost:6379

# OpenAI API (Required)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API (Optional - for 33% faster generation)
# Get your key from: https://aistudio.google.com/app/apikey
# If not provided, system will fallback to OpenAI
GEMINI_API_KEY=your_gemini_api_key_here

# LaTeX Compilation
TECTONIC_PATH=tectonic

# Storage
OUTPUT_DIR=./output
CACHE_DIR=./cache

# Logging
LOG_LEVEL=info

# Authentication (Clerk)
# Get your keys from: https://dashboard.clerk.com/
CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# Camoufox Remote Browser (Python Microservice)
# Set to 'true' to use Camoufox for maximum stealth (C++ level bot detection evasion)
# Requires Python service running (see docker-compose.yml)
# Uses REST API for browser automation
USE_CAMOUFOX=false
CAMOUFOX_API_ENDPOINT=http://localhost:3000

# Residential Proxy (Optional - for enhanced stealth)
# Proxy is configured in Node.js but runs in the browser (Python container)
# Example: http://proxy.example.com:8080
PROXY_SERVER=
PROXY_USERNAME=
PROXY_PASSWORD=

# 2Captcha API (Optional - for CAPTCHA solving)
# Get your key from: https://2captcha.com/
# Cost: ~$0.003 per CAPTCHA solve
TWOCAPTCHA_API_KEY=your_2captcha_api_key_here

# Browserless Cloud (Alternative to Camoufox)
# Managed browser infrastructure with enhanced stealth
# Get your token from: https://browserless.io/
USE_BROWSERLESS=false
BROWSERLESS_URL=wss://chrome.browserless.io
BROWSERLESS_TOKEN=your_browserless_token_here

# Playwright Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_CHROMIUM_EXECUTABLE_PATH=